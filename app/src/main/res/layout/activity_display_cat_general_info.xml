<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DisplayCatGeneralInfoActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/topButtons">

    <Button
        android:id="@+id/buttonGeneralInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="General info" />

    <Button
        android:id="@+id/buttonDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Details" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageCat"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/topButtons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@id/imageCat"
        android:layout_marginTop="5dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4788000105337932/7993250837">
    </com.google.android.gms.ads.AdView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        app:layout_constraintTop_toBottomOf="@id/adViewDetails">

        <TableRow>
            <TextView
                android:id="@+id/txtLabelName"
                android:text="Name"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/txtCatName"
                android:gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelOrigin"
                android:text="Origin"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/txtCatOrigin"
                android:gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelLength"
                android:text="Length"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/txtCatLength"
                android:gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelWeight"
                android:text="Weight (pounds)"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/txtCatWeight"
                android:gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelLifeExpectancy"
                android:text="Life expectancy"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/txtCatLifeExpectancy"
                android:gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelFamilyFriendly"
                android:text="Family-friendliness"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RatingBar
                    android:id="@+id/ratingFamilyFriendly"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelChildrenFriendly"
                android:text="Child-friendliness"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <RatingBar
                    android:id="@+id/ratingChildrenFriendly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
        <TextView
            android:id="@+id/txtLabelStrangerFriendly"
            android:text="Stranger-friendliness"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>
            <RelativeLayout>
                <RatingBar
                    android:id="@+id/ratingStrangerFriendly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelOtherPetsFriendly"
                android:text="Other pets-friendliness"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout>
                <RatingBar
                    android:id="@+id/ratingOtherPetsFriendly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelGeneralHealth"
                android:text="General health"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout>
                <RatingBar
                    android:id="@+id/ratingGeneralHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelIntelligence"
                android:text="Intelligence"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout>
                <RatingBar
                    android:id="@+id/ratingIntelligence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelPlayfulness"
                android:text="Playfulness"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout>
                <RatingBar
                    android:id="@+id/ratingPlayfulness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelMeowing"
                android:text="Meowing"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout>
                <RatingBar
                    android:id="@+id/ratingMeowing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelShedding"
                android:text="Shedding"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout>
                <RatingBar
                    android:id="@+id/ratingShedding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/txtLabelGrooming"
                android:text="Grooming"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"/>
            <RelativeLayout>
                <RatingBar
                    android:id="@+id/ratingGrooming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:numStars="5"
                    android:stepSize="1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>