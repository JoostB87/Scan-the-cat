<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayCatGeneralInfoActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/topButtons">

    <Button
        android:id="@+id/buttonGeneralInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="General info" />

    <Button
        android:id="@+id/buttonDetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Details" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageCat"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@id/topButtons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adViewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:layout_constraintLeft_toLeftOf="parent"
        ads:layout_constraintRight_toRightOf="parent"
        ads:layout_constraintTop_toBottomOf="@id/imageCat"
        android:layout_marginTop="5dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-4788000105337932/7993250837">
    </com.google.android.gms.ads.AdView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelName"
        android:text="Name"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/adViewDetails"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCatName"
        app:layout_constraintTop_toBottomOf="@+id/adViewDetails"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelOrigin"
        android:text="Origin"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelName"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCatOrigin"
        app:layout_constraintTop_toBottomOf="@+id/txtCatName"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelLength"
        android:text="Length"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelOrigin"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCatLength"
        app:layout_constraintTop_toBottomOf="@+id/txtCatOrigin"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelWeight"
        android:text="Weight (pounds)"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelLength"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCatWeight"
        app:layout_constraintTop_toBottomOf="@+id/txtCatLength"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelLifeExpectancy"
        android:text="Life expectancy"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelWeight"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCatLifeExpectancy"
        app:layout_constraintTop_toBottomOf="@+id/txtCatWeight"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelFamilyFriendly"
        android:text="Family-friendliness"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelLifeExpectancy"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <RatingBar
        android:id="@+id/ratingFamilyFriendly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/txtCatLifeExpectancy"
        android:layout_marginTop="10dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelChildrenFriendly"
        android:text="Child-friendliness"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelFamilyFriendly"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <RatingBar
        android:id="@+id/ratingChildrenFriendly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/ratingFamilyFriendly"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelStrangerFriendly"
        android:text="Stranger-friendliness"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelChildrenFriendly"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <RatingBar
        android:id="@+id/ratingStrangerFriendly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/ratingChildrenFriendly"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelOtherPetsFriendly"
        android:text="Other pets-friendliness"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelStrangerFriendly"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <RatingBar
        android:id="@+id/ratingOtherPetsFriendly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/ratingStrangerFriendly"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelGeneralHealth"
        android:text="General health"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelOtherPetsFriendly"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <RatingBar
        android:id="@+id/ratingGeneralHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/ratingOtherPetsFriendly"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelIntelligence"
        android:text="Intelligence"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelGeneralHealth"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <RatingBar
        android:id="@+id/ratingIntelligence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/ratingGeneralHealth"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelPlayfulness"
        android:text="Playfulness"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelIntelligence"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <RatingBar
        android:id="@+id/ratingPlayfulness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/ratingIntelligence"
        android:layout_marginTop="13dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelMeowing"
        android:text="Meowing"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelPlayfulness"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <RatingBar
        android:id="@+id/ratingMeowing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/ratingPlayfulness"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelShedding"
        android:text="Shedding"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelMeowing"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <RatingBar
        android:id="@+id/ratingShedding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/ratingMeowing"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelGrooming"
        android:text="Grooming"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelShedding"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <RatingBar
        android:id="@+id/ratingGrooming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:numStars="5"
        android:stepSize="1"
        app:layout_constraintTop_toBottomOf="@+id/ratingShedding"
        android:layout_marginTop="12dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>