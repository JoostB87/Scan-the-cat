<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayCatResultActivity">

    <ImageView
        android:id="@+id/imageCat"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelName"
        android:text="Name"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageCat"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCatName"
        app:layout_constraintTop_toBottomOf="@+id/imageCat"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/txtLabelName"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelOrigin"
        android:text="Origin"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelName"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCatOrigin"
        app:layout_constraintTop_toBottomOf="@+id/txtCatName"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/txtLabelOrigin"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelLength"
        android:text="Length"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelOrigin"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCatLength"
        app:layout_constraintTop_toBottomOf="@+id/txtCatOrigin"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/txtLabelLength"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelFamilyFriendly"
        android:text="Family-friendliness"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelLength"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCatFamilyFriendly"
        app:layout_constraintTop_toBottomOf="@+id/txtCatLength"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/txtLabelFamilyFriendly"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLabelChildrenFriendly"
        android:text="Child-friendliness"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/txtLabelFamilyFriendly"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCatChildFriendly"
        app:layout_constraintTop_toBottomOf="@+id/txtCatFamilyFriendly"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/txtLabelChildrenFriendly"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>